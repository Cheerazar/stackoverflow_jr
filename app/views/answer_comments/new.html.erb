<h4>COMMENT ON THIS ANSWER</h4>
<ul>
<%= form_for :answer_comment, url: answer_comment_create_path(answer.question.id, answer.id) do |f| %>
  <li>
    <%= f.label :comment %>
    <%= f.text_field :body, :class => 'comment-input' %>
  </li>
  <li>
    <%= f.submit :class => "menu-button", :id => "answer-comment_submit" %>
  </li>
<% end%>
</ul>
